<idea-plugin>
    <id>org.example.PythonTypeAnnotationPlugin</id>
    <name>PythonTypeAnnotationPlugin</name>
    <vendor>Example</vendor>

    <description>Add Python stub type annotation to variables and function parameters.</description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <intentionAction>
            <className>AddTypeAnnotationAction</className>
            <descriptionDirectoryName>intentionDescriptions.AddTypeAnnotationAction</descriptionDirectoryName>
        </intentionAction>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>